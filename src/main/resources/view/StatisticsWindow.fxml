<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.stage.*?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<fx:root minHeight="650" minWidth="530" resizable="false" title="ZeroToOne Report Card" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">

    <icons>
        <Image url="@/images/icon.png" />
    </icons>
    <scene>
    <Scene>
        <stylesheets>
            <URL value="@css/DarkTheme.css" />
            <URL value="@css/Extensions.css" />
        </stylesheets>
        <AnchorPane styleClass="background">

            <VBox>
                <HBox>
                    <padding>
                        <Insets left="20" right="20" top="20" />
                    </padding>
                     <Text fx:id="statisticsTitle">ZeroToOne Report Card</Text>
                </HBox>

                <HBox>
                    <padding>
                        <Insets bottom="10" left="20" right="20" />
                    </padding>
                    <Text fx:id="statisticsSubTitle">Statistics generated from </Text>
                </HBox>

                <VBox fx:id="dataPoints" alignment="CENTER_LEFT">
                    <padding>
                        <Insets bottom="10" left="20" right="20" />
                    </padding>
                </VBox>

                <VBox fx:id="lineChartContainer" alignment="CENTER"/>
            </VBox>
        </AnchorPane>
    </Scene>
  </scene>
</fx:root>
